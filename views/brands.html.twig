{% include 'header.html.twig' %}

  <h2>Add A Brand</h2>

  <form action="/addbrand" method="post">
    <label for="brand">Enter the name:</label>
    <input type="text" name="brand">
    <button type="submit">Add</button>
  </form>

  {% for brand in brands %}
    <li><a href="/brand/{{ brand.getId }}">{{ brand.getBrand }}</a></li>
  {% endfor %}

  <form action="/deletebrand" method="post">
    <label for="brand">Enter the brand that you want to delete:</label>
    <input type="text" name="brand">
    <button type="submit" class="button bg-danger">Delete</button>
  </form>

  <a href="/">Home</a>

